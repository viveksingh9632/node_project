<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
            <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
            <% } %>
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-light">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Role</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% roles.forEach(function(role, index) { %>
                        <tr>
                            <td><%= index  %></td>
                            <td><%= role.name %></td>
                            
                            

                            <td>
                                <input type="checkbox" id="role_<%= role._id %>" name="role[]" value="<%= role._id %>">
                                <label for="role_<%= role._id %>"><%= role.role_id %></label>
                                
                            </td>
                                    
                            
                            <td>
                                <a href="/edit-role/<%= role._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                <a href="/delete-role/<%= role._id %>" class="text-danger"><i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
