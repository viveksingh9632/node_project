<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Author: <%= author.name %></h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update-author/<%= author._id %>" method="POST" id="edit-author-form">
                        <!-- Name -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg"
                                placeholder="Enter name" value="<%= author.name %>" required>
                        </div>
                        <!-- Age -->
                        <div class="mb-3">
                            <label for="age" class="form-label">Age</label>
                            <input type="text" name="age" class="form-control form-control-lg"
                                placeholder="Enter age" value="<%= author.age %>" required>
                        </div>
                        <!-- Other fields related to author -->

                        <!-- Submit Button -->
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Author" class="btn btn-success btn-lg">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
