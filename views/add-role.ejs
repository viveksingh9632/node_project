<%- include('layout/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary">
                        <h3 class="text-light">Add User</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/save-role" method="post" id="add-form">

                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg"
                                    placeholder="Enter name" required>
                            </div>

                            <div class="mb-3">
                                <label>
                                    <input type="checkbox"  name="role_id[]" value="first">First role
                                </label>
                                <label>
                                    <input type="checkbox"  name="role_id[]" value="second">Second role
                                </label>
                            </div>
                            

                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>