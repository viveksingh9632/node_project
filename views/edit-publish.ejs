<%- include('layout/header') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Edit Publish: <%= publish.name %>
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update-publish/<%= publish._id %>" method="POST" id="edit-book-form">

                            <div class="mb-3">
                                <label for="name">Name
                                </label>
                                <input type="name" name="name
                                " class="form-control form-control-lg" placeholder="Enter name
                                    " value="<%= publish.name
                                    %>" required>
                            </div>


                            <div class="mb-3">
                                <label for="address">Address
                                </label>
                                <input type="text" name="address
                                " class="form-control form-control-lg" placeholder="Enter address
                                    " value="<%= publish.address
                                    %>" required>
                            </div>

                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>