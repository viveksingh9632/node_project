<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add User</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/save-publish" method="post" id="add-form">
                        <!-- Name -->
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required>
                        </div>
                        <!-- Total Pages -->
                        <div class="mb-3">
                            <label for="address">Address</label>
                            <input type="text" name="address" class="form-control form-control-lg" placeholder="Enter address" required>
                        </div>
                        <!-- Author -->
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
