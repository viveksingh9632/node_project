<%- include('layout/header') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead>
                                    <tr class="table-light">
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>total_pages</th>
                                        <th>author</th>
                                        <th>published_by</th>
                                        <th>price</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% books.forEach(function(book, index) { %>
                                        <tr>
                                            <td>
                                                <%= index %>
                                            </td>
                                            <td>
                                                <%= book.name %>
                                            </td>
                                            <td>
                                                <%= book.total_pages %>
                                            </td>

                                            <td>
                                                <% if (book.author) { %>
                                                    <p>
                                                        <%= book.author.name %>
                                                    </p>
                                                <% } %>
                                            </td>
                                            
                                            <td>
                                                <% if (book.publish) { %>
                                                    <p>
                                                        <%= book.publish.name %>
                                                    </p>
                                                <% } %>
                                            </td>
                                            
                                            <td>
                                                <%= book.price %>
                                            </td>

                                            <td>
                                                <a href="/edit-book/<%= book._id %>" class="text-success"><i
                                                        class="fas fa-edit fa-lg mx-1"></i></a>
                                                <a href="/delete-book/<%= book._id %>" class="text-danger"><i
                                                        class="fas fa-trash-alt fa-lg mx-1"></i></a>
                                            </td>

                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>