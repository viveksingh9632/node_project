<%- include('layout/header') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <table class="table table-striped text-center">
                                <thead>
                                    <tr class="table-light">
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Address</th>

                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% publishers.forEach(function(publish, index) { %>
                                        <tr>
                                            <td><%= index %></td>
                                            <td><%= publish.name %></td>
                                            <td><%= publish.address %></td>
                                            <td>
                                                <a href="/edit-publish/<%= publish._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                                <a href="/delete-publish/<%= publish._id %>" class="text-danger"><i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                                            </td>
                                                            
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>