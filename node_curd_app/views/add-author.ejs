<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add Author</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/save-author" method="post" id="add-form">
                        <!-- Name -->
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" id="name" placeholder="Enter name" required>
                        </div>

                        <!-- Age -->
                        <div class="mb-3">
                            <label for="age" class="form-label">Age</label>
                            <input type="text" name="age" class="form-control form-control-lg" id="age" placeholder="Enter age" required>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
