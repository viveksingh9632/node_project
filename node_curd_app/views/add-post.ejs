<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <%- include('layout/message') %>

            <div class="card shadow">
<div class="card-header bg-primary">
                    <h3 class="text-light">Add Post</h3>
                </div>
                <div class="card-body p-4">

                        <div class="mb-3">
                            <label for="category_id">Category</label>
                            <select class="form-control form-control-lg" name="category_id" id="category_id" >
                                <option value="">Select an option</option>
                                <% categories.forEach(function(category) { %>
                                    <option value="<%= category._id %>"><%= category.name %></option> 
                                <% }); %>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="tag_id">Tag</label>
                            <select class="form-control form-control-lg" name="tag_id" id="tag_id" >
                                <option value="">Select an option</option>
                                <% tags.forEach(function(tag) { %>
                                    <option value="<%= tag._id %>"><%= tag.name %></option> 
                                <% }); %>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="user_id">User</label>
                            
                            <select class="form-control form-control-lg" name="user_id" id="user_id" >
                                <option value="">Select an option</option>
                                <% users.forEach(function(user) { %>
                                    <option value="<%= user._id %>"><%= user.name %></option> 
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="image">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" required>
                        </div>

                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required>
                        </div>
                        <div class="mb-3">
                            <label for="slug">Slug</label>
                            <input type="text" name="slug" class="form-control form-control-lg" placeholder="Enter slug" required>
                        </div>
                        <div class="mb-3">
                            <label for="content">Content</label>
                            <input type="text" name="content" class="form-control form-control-lg" placeholder="Enter content" required>
                        </div>
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Add Post" class="btn btn-primary btn-lg">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
