<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <!-- Display alert message -->
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            
            <div class="table-responsive">
                <!-- User table -->
                <table class="table table-striped text-center">
                    <thead>
                        <tr class="table-light">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Role</th> 
                            <th>Image</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user, index) { %>
                            <tr>
                                <!-- User ID -->
                                <td><%= index %></td>
                                  <td><%= user.name  %></td> 
                                  <td>
                                    <% if (user.role_id) { %>
                                    <p><%= user.role_id.name %></p>
                                    <!-- Render other category information as needed -->
                                <% } %>
                                </td>
        
                                <td><img src="<%= user.image %>" width="50" class="img-thumbnail"></td>
                                
                                <td><%= user.email %></td>
                                <td><%= user.phone %></td>
                                
                                <td>
                                    <a href="/edit-user/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete-user/<%= user._id %>" class="text-danger"><i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
